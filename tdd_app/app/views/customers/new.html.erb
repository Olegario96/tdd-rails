<% if @customer.errors.any? %>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
<% end %>

<h1>New client</h1>

<%= form_for @customer do |f|%>
  <div class="form" style="padding: 10px;">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form" style="padding: 10px;">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form" style="padding: 10px;">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="form" style="padding: 10px;">
    <%= f.label :avatar %><br/>
    <%= f.file_field :avatar %>
  </div>

  <div class="form" style="padding: 10px;">
    <%= f.label :smoker %>
    <% {'Y': 'Yes', 'N': 'No'}.each do |key, value| %>
      <%= f.radio_button :smoker, key %> <%= value %><br/>
    <% end %>
  </div>

  <div class="form" style="padding: 10px;">
    <%= f.submit 'Create' %>
  </div>
<% end %>
